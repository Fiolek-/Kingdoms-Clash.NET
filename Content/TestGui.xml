<XamlGuiContainer xmlns="GUI"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <XamlGuiContainer.Triggers>
    <!--<MultiIf Type="Or">
      <If Object="Button2" PropertyName="IsHot" Value="true" />
      <If Object="Button3" PropertyName="IsHot" Value="true" />
      <MultiIf.Triggers>
        <Set Object="Panel1Img" PropertyName="Visible" Value="true" />
      </MultiIf.Triggers>
    </MultiIf>
    <MultiIf Type="And">
      <If Object="Button2" PropertyName="IsHot" Value="false" />
      <If Object="Button3" PropertyName="IsHot" Value="false" />
      <MultiIf.Triggers>
        <Set Object="Panel1Img" PropertyName="Visible" Value="false" />
      </MultiIf.Triggers>
    </MultiIf>-->

    <If Object="Button2" PropertyName="Clicked" Value="true">
      <Set Object="Panel1Txt" PropertyName="DataContext" Value="{x:Reference Tb1}" />
    </If>
    <If Object="Button3" PropertyName="Clicked" Value="true">
      <Set Object="Panel1Txt" PropertyName="DataContext" Value="{x:Reference Tb2}" />
    </If>
  </XamlGuiContainer.Triggers>

  <XamlGuiContainer.Controls>
    <Button Id="Button1" Position="10,10" Size="80,80">
      <Rectangle Color="1,1,1,1" Depth="2" />
      <Text Font="Arial,15,bi" TextValue="Wyjście" Color="0,0,1,1" Depth="0" />
    </Button>

    <Button ID="Button2" Position="100,10" Size="80,80">
      <Rectangle Color="1,1,1,1" Depth="2" />
      <Text Font="Arial,15,bi" TextValue="Textbox 1" Color="0,0,1,1" Depth="0" />
    </Button>

    <Button Id="Button3" Position="190,10" Size="80,80">
      <Rectangle Color="1,1,1,1" Depth="2" />
      <Text Font="Arial,15,bi" TextValue="Textbox 2" Color="0,0,1,1" Depth="0" />
    </Button>

    <Panel Id="Panel1" Position="150, 150" Size="100, 100">
      <Rectangle Color="1,1,1,1" Depth="1" />
      <Text x:Name="Panel1Txt" DataContext="Tb1" Font="Arial,15" TextValue="{Binding Text}" Color="0,1,0,1" Depth="0" />
    </Panel>

    <TextBox Id="Tb1" Position="300, 300" Size="250, 18">
      <Rectangle Color="1,1,1,1" Depth="1" />
      <Text DataContext="Tb1" Font="Arial,15" TextValue="{Binding Text}" Color="0,1,0,1" Depth="0" />
    </TextBox>

    <TextBox Id="Tb2" Position="300, 330" Size="250, 18">
      <Rectangle Color="1,1,1,1" Depth="1" />
      <Text DataContext="Tb2" Font="Arial,15" TextValue="{Binding Text}" Color="0,1,0,1" Depth="0" />
    </TextBox>
  </XamlGuiContainer.Controls>
</XamlGuiContainer>