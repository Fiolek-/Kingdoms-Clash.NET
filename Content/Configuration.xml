<configuration>
  <!-- Konfiguracja okna. width - szerokość(w px), height - wysokość(w px), fullscreen - czy uruchamiać grę na pełnym ekranie -->
  <window width="800" height="600" fullscreen="false" />
  <!-- Czy używać synchronizacji pionowej -->
  <vsync />
  <!-- Licznik FPS -->
  <fpscounter />
  <!-- Konfiguracja gracza 1. nation - nacja gracza(MUSI istnieć w folderze Content/UserData/Nations) -->
  <player1 nation="TestNation" />
  <!-- Konfiguracja gracza 2. nation - patrz wyżej -->
  <player2 nation="TestNation" />
  <!-- Początkowe zasoby. value - wartość początkowych zasobów -->
  <startresources value="1000" />
  <!-- Odnawianie się zasobów na mapie. time - czas co jaki zasoby się odnawiają, value - wartość pojedynczego "drzewka" -->
  <resourcerenewal time="8" value="30" />
  <!-- Kamera. speed - szybkość poruszania się kamery(w metrach/s) -->
  <camera speed="100" />
  <!-- Rozmiar zamku. width - szerokość, height - wysokość -->
  <castle width="20" height="30" />
</configuration>