<?xml version="1.0" encoding="utf-8" ?><!--  Główny element pliku z nacją.    name - nazwa    image - ścieżka do obrazka zamku(absolutna, począwszy od folderu z grą)--><nation name="TestNation" image="UserData/Nations/TestNation/Castle.png">  <!--    Opis pojedynczej jednostki.	  id - identyfikator(i zarazem nazwa) jednostki	  health - zdrowie jednostki(aktualnie nie ma znaczenia)	  width - szerokość jednoski	  height - wysokość jednostki  -->  <unit id="Unit1" health="100" width="5" height="5">    <!-- Lista komponentów -->    <components>	  <!-- Dodanie go powoduje, że jednostka potrafi się poruszać. velocity - prędkość jednostki(w metrach/s) -->      <movable velocity="10" />	  <!-- Oznacza, że jednostka posiada obrazek(jest widoczna dla gracza). image - ścieżka do obrazka(absolutna, począwszy od folderu z grą) -->      <sprite image="UserData/Nations/TestNation/Unit1.png" />	  <!-- Oznacza, że jednostka potrafi walczyć wręcz. strength - siła jednostki -->      <contactsoldier strength="10" />	  <!-- Oznacza, że jednostka potrafi zbierać zasoby. maxcargosize - maksymalny rozmiar zasobu, jaki jednostka może nieść -->	  <collector maxcargosize="30" />    </components>    <!--      Koszta wyprodukowania jednostki.	  Dostępne zasoby:	    wood - drewno	-->    <costs>	  <!-- Zasób. Nazwa elementu to identyfikator zasobu, value - wartość, jaka potrzebna jest do wyprodukowania jednostki. -->      <wood value="10" />    </costs>  </unit></nation>