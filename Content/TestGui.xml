<XamlGuiContainer xmlns="clr-namespace:ClashEngine.NET.Graphics.Gui;assembly=ClashEngine.NET"
				  xmlns:tk="clr-namespace:OpenTK;assembly=OpenTK"
                  xmlns:o="clr-namespace:ClashEngine.NET.Graphics.Gui.Objects;assembly=ClashEngine.NET"
				  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <XamlGuiContainer.Variables>
    <Variable x:Name="TestText" Value="abc" />
    <Variable x:Name="Tex" Value="{Texture Test.Test2}" />
  </XamlGuiContainer.Variables>
  <Button x:Name="Button1" Position="10,10" Size="88,64">
    <o:Rectangle Color="1,1,1,1" />
	<o:Text Font="{SystemFont Arial,15}" TextValue="Wyjście" Color="0,0,0,1" />
  </Button>
  <TextBox x:Name="Tb1" Position="100, 100" Size="100, 40" Text="{Binding Path=TestText,Mode=TwoWay}">
    <o:Rectangle Color="1,1,1,1" />
	<o:Text Font="{SystemFont Arial,15}" TextValue="{Binding TestText}" />
  </TextBox>
</XamlGuiContainer>