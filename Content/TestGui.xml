<XamlGuiContainer xmlns="clr-namespace:ClashEngine.NET.Graphics.Gui;assembly=ClashEngine.NET"
                  xmlns:o="clr-namespace:ClashEngine.NET.Graphics.Gui.Objects;assembly=ClashEngine.NET">
  <Button Id="Button1" Position="10,10" Size="64,32">
    <o:Rectangle Color="1,1,1,1" Depth="0" Position="10,10" Size="64,32" />
  </Button>
  <Button Id="Button2" Position="100,100" Size="64,32">
    <o:Rectangle Color="1,1,1,1" Depth="0" Position="100,100" Size="{Binding Path=Button1.Size, Mode=OneWay}" />
  </Button>
</XamlGuiContainer>